<h2>Contactos</h2>
<% i=0%>
<table>
  <thead>
    <tr>
    <th>#</th>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Cedula</th>
      <th>Celular</th>
      <th>Telefono</th>
      <th>Mesa</th>
      <th>Paraje</th>
        <th>Sexo</th>
        <th>Intencion</th>
        <th>Fecha ult contacto</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @enc_contacto.contactos.each do |contacto| %>
      <%if contacto.id != nil%>
      <tr>

        <td><%= i=i+1 %></td>
        <td><%= contacto.nombre %></td>
        <td><%= contacto.apellido %></td>
        <td><%= contacto.cedula %></td>
        <td><%= contacto.celular %></td>
        <td><%= contacto.telefono %></td>
        <td><%= contacto.mesa %></td>
          <td><%= contacto.paraje %></td>
          <td><%= contacto.sexo %></td>
          <td><%= contacto.intesion %></td>
        <td><%= contacto.fecha_ultimo_contacto %></td>
          <td><%= link_to 'Edit', "/enc_contactos/#{@enc_contacto.id}/contactos/#{contacto.id}/edit" %></td>
          <td><%= link_to 'Destroy', "/enc_contactos/#{@enc_contacto.id}/contactos/#{contacto.id}", method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>





